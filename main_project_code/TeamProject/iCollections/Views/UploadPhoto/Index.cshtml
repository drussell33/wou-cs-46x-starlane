@{
    ViewData["Title"] = "Upload Photo";
}

<div class="container py-5">

    <header class="text-center">
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-0">Add your iCollection photos here. Press the "Choose file" button to select a photo from your computer.
        </p>
        <p class="mb-5 font-weight-light">
            <a asp-action="NeedHelp">
                <u>Need help?</u>
            </a>
        </p>
        @if (ViewBag.SuccessMessage != null)
        {
            <p class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.SuccessMessage
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </p>;
        }
    </header>


    <div class="row py-4">
        <div class="col-lg-6 mx-auto">

            <form id="photoUpload" asp-controller="UploadPhoto" asp-action="UploadImage" method="POST"
                enctype="multipart/form-data">
                <div class="middle-input">
                    <input id="customName" type="text" class="form-control" name="customName" placeholder="Optional name">
                    <span id="customNameError"></span>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger font-weight-bold" })
                </div>

                <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                    <input id="upload" type="file" accept="image/*" class="form-control border-0" name="upload">
                    <label id="upload-label" for="upload" class="font-weight-light text-muted">Choose file</label>
                    <div class="input-group-append">
                        <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i
                                class="fa fa-cloud-upload mr-2 text-muted"></i><small
                                class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                    </div>
                </div>
                <span id="uploadPhotoError"></span>

                <p class="font-italic text-center">The uploaded photo will be shown below.</p>
                <div class="image-area mt-4"><img id="imageResult" src="#" alt=""
                        class="img-fluid rounded shadow-sm mx-auto d-block"></div>

                <button type="submit" class="btn btn-primary right-button">Submit</button>
            </form>

        </div>
    </div>
</div>
